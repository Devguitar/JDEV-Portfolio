<!-- Scroll to Top Button (responsive for all devices) -->
<button
  id="scrollToTop"
  class="fixed bottom-20 right-4 sm:bottom-28 sm:right-8 p-3 sm:p-4 bg-white text-black border-2 border-black hover:bg-black hover:text-white transition-all opacity-0 pointer-events-none z-50 shadow-lg active:scale-95"
  aria-label="Scroll to top"
  style="padding-bottom: max(0.75rem, calc(0.75rem + env(safe-area-inset-bottom)));"
>
  <svg class="h-5 w-5 sm:h-6 sm:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
    <path stroke-linecap="square" stroke-width="3" d="M5 15l7-7 7 7"></path>
  </svg>
</button>

<footer class="relative bg-white text-black py-8 overflow-hidden">
  <div class="absolute inset-0 opacity-[0.08] pointer-events-none">
    <div
      class="w-full h-full"
      style="background-image: 
        linear-gradient(#000 2px, transparent 2px), 
        linear-gradient(90deg, #000 2px, transparent 2px); 
       background-size: 410px 400px;
       background-position: -72px 0;"
    >
    </div>
  </div>
  <!-- Gradient Overlay - Bottom to top fade -->
  <div
    class="absolute inset-0 pointer-events-none"
    style="background: linear-gradient(0deg, rgba(255,255,255,1) 0%, rgba(245,245,245,0.6) 50%, rgba(235,235,235,0.3) 100%);"
  >
  </div>
  <div class="max-w-screen-xl mx-auto px-6 text-center relative z-10">
    <p class="text-xl font-black">&copy; 2025 JOHN DAVE</p>
  </div>
</footer>

<script>
  const btn = document.getElementById("scrollToTop");

  // Handle scroll visibility
  function updateScrollButtonVisibility() {
    const show = window.scrollY > 300;
    const chatBox = document.getElementById("chat-box");
    const isChatOpen = chatBox && !chatBox.classList.contains("hidden");
    
    // Hide button if chat is open OR if not scrolled enough
    if (isChatOpen || !show) {
      btn?.classList.add("opacity-0", "pointer-events-none");
      btn?.classList.remove("opacity-100");
    } else {
      btn?.classList.remove("opacity-0", "pointer-events-none");
      btn?.classList.add("opacity-100");
    }
  }

  // Throttle scroll events for better performance
  let scrollTimeout: ReturnType<typeof setTimeout>;
  window.addEventListener("scroll", () => {
    if (scrollTimeout) {
      clearTimeout(scrollTimeout);
    }
    scrollTimeout = setTimeout(updateScrollButtonVisibility, 50);
  }, { passive: true });

  btn?.addEventListener("click", () => {
    window.scrollTo({ top: 0, behavior: "smooth" });
  });

  // Listen for chat toggle events
  const chatBtn = document.getElementById("chat-btn");
  chatBtn?.addEventListener("click", () => {
    // Small delay to let chat animation complete
    setTimeout(updateScrollButtonVisibility, 100);
  });

  // Handle orientation changes on mobile
  window.addEventListener("orientationchange", () => {
    setTimeout(updateScrollButtonVisibility, 200);
  });

  // Initial check
  updateScrollButtonVisibility();
</script>