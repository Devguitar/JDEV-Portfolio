---
import { skills } from "../data/portfolio";
---

<section
  id="skills"
  class="py-20 border-b-2 border-black relative overflow-hidden"
>
  <div class="absolute inset-0 opacity-[0.08] pointer-events-none">
    <div
      class="w-full h-full"
      style="background-image: 
        linear-gradient(#000 2px, transparent 2px), 
        linear-gradient(90deg, #000 2px, transparent 2px); 
       background-size: 410px 400px;
       background-position: -72px 0;"
    >
    </div>
  </div>

  <!-- Gradient Overlay - Radial from center -->
  <div
    class="absolute inset-0 pointer-events-none"
    style="background: radial-gradient(ellipse 85% 85% at 50% 50%, rgba(255,255,255,1) 0%, rgba(255,255,255,0.95) 30%, rgba(255,255,255,0.7) 50%, transparent 70%);"
  >
  </div>

  <!-- Additional top and bottom fade -->
  <div
    class="absolute inset-0 pointer-events-none"
    style="background: linear-gradient(to bottom, rgba(255,255,255,0.8) 0%, transparent 20%, transparent 80%, rgba(255,255,255,0.8) 100%);"
  >
  </div>

  <!-- Side fades for better blending -->
  <div
    class="absolute inset-0 pointer-events-none"
    style="background: linear-gradient(to right, rgba(255,255,255,0.6) 0%, transparent 15%, transparent 85%, rgba(255,255,255,0.6) 100%);"
  >
  </div>

  <div class="max-w-screen-xl mx-auto px-6 relative z-10">
    <div class="mb-12">
      <span
        class="inline-block text-xs font-black tracking-widest border-b-2 border-black pb-1 mb-4"
      >
        TECH STACK
      </span>
    </div>

    <div class="max-w-4xl mx-auto">
      <div
        class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-0 border-l-2 border-t-2 border-black"
      >
        {
          skills.map((skill) => (
            <div class="group border-r-2 border-b-2 border-black bg-white hover:bg-black transition-colors p-8 text-center">
              {skill.icon && (
                <div class="mb-4 flex justify-center">
                  <img
                    src={skill.icon}
                    alt={skill.name}
                    class={`w-12 h-12 object-contain grayscale group-hover:grayscale-0 transition-all duration-300 ${
                      skill.name === "Git & GitHub" ? "group-hover:invert" : ""
                    }`}
                  />
                </div>
              )}
              <h4 class="text-base font-black tracking-wide text-black group-hover:text-white">
                {skill.name}
              </h4>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
