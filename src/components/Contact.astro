---
import { contactMethods } from '../data/portfolio';
---

<section id="contact" class="py-20 bg-white text-black border-b-2 border-black">
  <div class="max-w-screen-xl mx-auto px-6">
    <div class="mb-12">
      <span class="inline-block text-xs font-black tracking-widest border-b-2 border-black pb-1 mb-4">
        GET IN TOUCH
      </span>
    </div>

    <div class="max-w-4xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-0 border-l-2 border-t-2 border-black">
        {contactMethods.map(method => (
          <a 
            href={method.href}
            target={method.href.startsWith('http') ? '_blank' : undefined}
            class="group border-r-2 border-b-2 border-black bg-transparent hover:bg-black transition-colors p-8"
          >
            <div class="flex flex-col items-center text-center">
              {method.icon && (
                <div class="mb-4">
                  <img 
                    src={method.icon} 
                    alt={method.title}
                    class={`w-12 h-12 object-contain grayscale transition-all duration-300 ${
                      method.title === 'GITHUB' || method.title === 'X (TWITTER)' 
                        ? 'group-hover:invert group-hover:grayscale-0' 
                        : 'group-hover:grayscale-0'
                    }`}
                  />
                </div>
              )}
              <h4 class="text-sm font-black tracking-widest mb-2 text-black group-hover:text-white">
                {method.title}
              </h4>
            </div>
          </a>
        ))}
      </div>
    </div>
  </div>
</section>