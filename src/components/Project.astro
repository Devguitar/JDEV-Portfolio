---
import { projects } from "../data/portfolio";
---

<section
  id="project"
  class="py-20 border-b-2 border-black relative overflow-hidden"
>
  <div class="absolute inset-0 opacity-[0.08] pointer-events-none">
    <div
      class="w-full h-full"
      style="background-image: 
        linear-gradient(#000 2px, transparent 2px), 
        linear-gradient(90deg, #000 2px, transparent 2px); 
       background-size: 410px 400px;
       background-position: -72px 0;"
    >
    </div>
  </div>

  <!-- Gradient Overlay - Diagonal top-left to bottom-right -->
  <div
    class="absolute inset-0 pointer-events-none"
    style="background: linear-gradient(90deg, rgba(255,255,255,1) 0%, rgba(240,240,240,0.8) 50%, rgba(0,0,0,0.05) 100%);"
  >
  </div>

  <!-- Additional corner fades for smoother blend -->
  <div
    class="absolute inset-0 pointer-events-none"
    style="background: radial-gradient(ellipse at top left, rgba(255,255,255,0.8) 0%, transparent 50%);"
  >
  </div>

  <div
    class="absolute inset-0 pointer-events-none"
    style="background: radial-gradient(ellipse at bottom right, transparent 50%, rgba(255,255,255,0.3) 100%);"
  >
  </div>

  <div class="max-w-screen-xl mx-auto px-6 relative z-10">
    <div class="mb-12">
      <span
        class="inline-block text-xs font-black tracking-widest border-b-2 border-black pb-1 mb-4"
      >
        FEATURED PROJECTS
      </span>
    </div>

    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-0 border-l-2 border-t-2 border-black"
    >
      {
        projects.map((project) => (
          <a
            href={project.link}
            class="group block border-r-2 border-b-2 border-black bg-white hover:bg-black transition-colors"
          >
            <div class="aspect-video overflow-hidden border-b-2 border-black group-hover:border-white bg-gray-50 transition-colors">
              <img
                src={project.image}
                alt={project.title}
                class="w-full h-full object-cover grayscale group-hover:grayscale-0 group-hover:scale-105 transition-all duration-300"
              />
            </div>
            <div class="p-6">
              <span class="text-xs font-black tracking-widest text-black group-hover:text-white transition-colors">
                {project.category}
              </span>
              <h3 class="text-2xl font-black tracking-tight mt-2 mb-1 text-black group-hover:text-white transition-colors">
                {project.title}
              </h3>
              <p class="text-sm text-gray-600 group-hover:text-gray-300 transition-colors">
                {project.subtitle}
              </p>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</section>
